<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itersan.ersanadmin.mapper.UserMapper">


    <!--    根据用户名查询用户信息-->
    <select id="selectUserName" resultType="com.itersan.ersanpojo.admin.User">
        select *
        from sys_user
        where user_name = #{username}
    </select>


</mapper>